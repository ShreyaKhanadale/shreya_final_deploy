<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FreshTrackPro Dashboard</title>

    <!-- âœ… Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <script src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- âœ… Custom CSS -->
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7fc;
            margin: 0;
            display: flex;
        }

        /* Navbar */
        .navbar {
            background-color: #343a40 !important;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: #2c3e50;
            color: white;
            position: fixed;
            top: 56px;
            left: 0;
            height: calc(100vh - 56px);
            padding-top: 20px;
            overflow-y: auto;
        }

        .sidebar a,
        .sidebar .logout {
            padding: 15px;
            display: block;
            color: white;
            text-decoration: none;
            transition: 0.3s;
            cursor: pointer;
        }

        .sidebar a:hover,
        .sidebar .logout:hover {
            background-color: #34495e;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            padding: 80px 20px 20px 270px;
            /* Adjusted for sidebar */
        }

        /* Table Styling */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        th,
        td {
            border: 1px solid black;
            padding: 10px;
            text-align: left;
        }

        th {
            background: #34495e;
            color: white;
        }

        .status-fresh {
            color: green;
            font-weight: bold;
        }

        .status-expired {
            color: red;
            font-weight: bold;
        }
        /* Updated Search Bar */
.navbar .form-control {
    background-color: #f8f9fa; /* Light gray background */
    border: 1px solid #ced4da; /* Subtle border */
    color: #495057; /* Dark text color */
}

.navbar .form-control:focus {
    background-color: white; 
    border-color: #007bff; /* Highlight color */
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

.navbar .btn-outline-success {
    color: white;
    background-color: #28a745; /* Green button */
    border-color: #28a745;
}

.navbar .btn-outline-success:hover {
    background-color: #218838;
    border-color: #1e7e34;
}

    </style>
</head>

<body>

      <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="#">
                <img src="logo.jpg" height="40">
            </a>
                       <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item active"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="/">Contact</a></li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar">
        <a href="/admin"><i class="fas fa-user-shield"></i> Admin</a>
        <a href="/analytics"><i class="fas fa-chart-bar"></i> Analytics</a>
        <!-- <a href="chart.ejs" ><i class="fas fa-chart-bar"></i> Chart</a>      -->
        <a href="/chart"><i class="fas fa-chart-pie"></i> Chart</a>
        <div href="/logout" class="logout" onclick="logout()"><i class="fas fa-sign-out-alt"></i> Logout</div>
    </div>

    <!-- âœ… Main Content -->
    <div class="main-content">
        <h1>ðŸ“‹ Analytics</h1>
        <table id="foodTable">
            <thead>
                <tr>
                    <th>Unique ID</th>
                    <th>Food Name</th>
                    <th>Timestamp</th>
                    <th>Gas Level</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="foodTableBody"></tbody>
        </table>
    </div>

    <!-- âœ… JavaScript for Real-Time Updates -->
    <script>
        const socket = io();
        socket.on("foodDataUpdate", (data) => {
            console.log("ðŸ“¡ Updating Analytics Table:", data);
            const tableBody = document.getElementById("foodTableBody");
            const newRow = document.createElement("tr");
            newRow.innerHTML = `
                <td>${data.unique_id}</td>
                <td>${data.food_name}</td>
                <td>${data.timestamp}</td>
                <td>${data.gas_level_ppm}</td>
                <td>${data.status}</td>
            `;
            tableBody.appendChild(newRow);
        });
    </script>

    <!-- âœ… Bootstrap JS (for navbar functionality) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

</body>

</html>